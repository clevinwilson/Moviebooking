<title> Owner</title>



<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {{>owner-sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">



                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Edit  Movie</h1>

                    <div class="row">

                        <div class="col-lg-11">

                            <!-- Circle Buttons -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Details</h6>
                                </div>
                                <form action="/owner/edit-movie/{{movieDetails._id}}" id="submit-form" enctype="multipart/form-data" method="post">
                                    <div class="card-body">
                                        <div class="form-group mt-3 col-md-10">
                                            <label for="movietitle">Movie Title</label>
                                            <input style="border-color:#b4e3eb;" type="text"
                                                class="form-control col-md-12 mt-2" id="movietitle" name="movietitle"
                                                 value="{{movieDetails.movietitle}}"  required >
                                        </div>
                                        <div class="form-group mt-3 col-md-10">
                                            <label for="Cast">Cast</label>
                                            <input style="border-color:#b4e3eb;" type="text"
                                                class="form-control col-md-12 mt-2" id="cast" name="cast"
                                                value="{{movieDetails.cast}}"required>
                                        </div>
                                         <div class="form-group mt-3 col-md-10">
                                            <label for="Director">Director</label>
                                            <input style="border-color:#b4e3eb;" type="text"
                                                class="form-control col-md-12 mt-2" id="director" name="director"
                                                value="{{movieDetails.director}}" required>
                                        </div>
                                         <div class="form-group mt-3 col-md-10">
                                            <label for="Release Date">Release Date</label>
                                            <input style="border-color:#b4e3eb;" type="date"
                                                class="form-control col-md-12 mt-2" id="releasedate" name="releasedate"
                                               value="{{movieDetails.releasedate}}"  required>
                                        </div>
                                        <div class="row m-1">
                                        <div class="form-group mt-3 col-md-5">
                                            <label for="Run Time">Run Time</label>
                                            <input style="border-color:#b4e3eb;" type="text"
                                                class="form-control col-md-12 mt-2" id="hour" name="hour"
                                                placeholder="Hour" value="{{movieDetails.hour}}" required>
                                        </div>
                                        <div class="form-group mt-5 col-md-5">
                                            <input style="border-color:#b4e3eb;" type="text"
                                                class="form-control col-md-12 mt-2" id="minute" name="minute"
                                                placeholder="Minute" value="{{movieDetails.minute}}" required>
                                        </div>
                                        </div>
                                        <div class="form-group mt-3 col-md-10">
                                            <label for="Language">Language</label>
                                            <input style="border-color:#b4e3eb;" type="text"
                                                class="form-control col-md-12 mt-2" id="language" name="language"
                                               value="{{movieDetails.language}}" required>
                                        </div>
                                        <div class="form-group mt-3 col-md-10">
                                            <label for="Type">Type</label>
                                            <input style="border-color:#b4e3eb;" type="text"
                                                class="form-control col-md-12 mt-2" id="type" name="type"
                                                value="{{movieDetails.type}}"  required>
                                        </div>
                                        <div class="form-group mt-3 col-md-10">
                                            <label for="Trailer Link">Trailer Link</label>
                                            <input style="border-color:#b4e3eb;" type="text"
                                                class="form-control col-md-12 mt-2" id="trailerlink" name="trailerlink"
                                                value="{{movieDetails.trailerlink}}" required>
                                        </div>
                                        <div class="form-group mt-3 col-md-10">
                                            <label for="Trailer Link">Movie Poster</label>
                                            <img src="/movie-images/{{movieDetails._id}}.jpg" id="imgView" height="250px" width="150px">
                                            <input style="border-color:#b4e3eb;"  type="file"
                                                class="form-control col-md-12 mt-2" name="Image" onchange="viewImage(event)"
                                                 required>
                                        </div>
                                        <center>
                                            <a href="/owner/movie-management"
                                                class="btn btn-danger  mt-3 mr-2 ">Cancel</a>
                                            <button type="submit" id="submit" class="btn btn-success  mt-3">Submit</button>
                                        </center>
                                    </div>
                                </form>
                            </div>



                        </div>

                    </div>
                </div>
            </div>
        </div>

</body>

</html>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>