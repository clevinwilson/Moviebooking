<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {{>owner-sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">


                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-2 text-gray-800">Now Showing Movies</h1>
                        <a href="/owner/upcoming-movies" class="d-none d-sm-inline-block m-2 ml-auto btn btn-sm btn-success shadow-sm"><i
                                class=" fa-sm text-white-50"></i>  UP COMING MOVIES</a>
                        <a href="/owner/add-movie" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                                class="fas fa-file-video fa-sm text-white-50"></i>  ADD MOVIE</a>
                    </div>


                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Details</h6>
                        </div>
                        <div class="message p-3">
                            {{#if editMovieSucc}}
                            <div class="alert alert-success" role="alert">
                                {{editMovieSucc}}
                            </div>
                            {{/if}}
                            {{#if editMovieErr}}
                            <div class="alert alert-danger" role="alert">
                                {{editMovieErr}}
                            </div>
                            {{/if}}
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Sr.no</th>
                                            <th>Movie Name</th>
                                            <th>Release Date</th>
                                            <th>Run Time</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Sr.no</th>
                                            <th>Movie Name</th>
                                            <th>Release Date</th>
                                            <th>Run Time</th>
                                            <th>Actions</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                       {{#each movies}}
                                        <tr>
                                            <td>{{this._id}}</td>
                                            <td>{{this.movietitle}}</td>
                                            <td>{{this.releasedate}}</td>
                                            <td>{{this.hour}}Hr {{this.minute}}min</td>
                                            <td align="center"><a type="button" href="/owner/edit-movie/{{this._id}}"
                                                    style=" border-radius: 21px;"
                                                    class="text-white m-2 btn btn-success">EDIT</a><a
                                                    style=" border-radius: 21px;" type="button" href="#"
                                                    data-toggle="modal" data-target="#deleteModal"
                                                    onclick=" confirmDelete('{{this._id}}')"
                                                    class="text-white ml-2 btn btn-danger">DELETE</a></td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->


        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>



    <!-- Delete Modal-->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div style="    margin-top: 242px;" class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="exampleModalLabel">Confirm to delete</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Are you sure you want to delete ?</div>
                <div class="modal-footer">
                    <button class="btn btn-success" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-danger" href="#" onclick="deleteTheater()">Delete</a>
                </div>
            </div>
        </div>
    </div>



</body>

</html>
<style>
    tr:hover {
        box-shadow: 1px 0px 22px -1px #888888;

    }
</style>


<script>
    function confirmDelete(theaterId) {
        id = theaterId
        $(document).ready(function () {
            $("#deleteModal").modal('show')
        })

    }
    function deleteTheater() {
        $(document).ready(function () {
            $("#deleteModal").modal('hide')
        })
        $.ajax({
            url: '/owner/delete-movie/' + id,
            method: 'get',
            success: (response) => {
                if (response.status) {
                    alert("Theater deleted successfully")
                    window.location.reload()
                } else {
                    alert("Something went wrong please try again")
                    window.location.reload()
                }
            }
        })
    }
</script>