<title> Admin</title>



<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {{>admin-sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">



                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Edit theater Owners details</h1>

                    <div class="row">

                        <div class="col-lg-11">

                            <!-- Circle Buttons -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Details</h6>
                                </div>
                               
                                <form action="/admin/edit-theater-details" id="submit-form" method="post">
                                    <div class="card-body">
                                        <div class="form-group mt-3 col-md-10">
                                            <label for="username">User Name</label>
                                            <input style="border-color:#b4e3eb;" type="text"
                                                class="form-control col-md-12 mt-2" value="{{response.username}}"
                                                id="username" name="username" placeholder="User Name" readonly required>
                                        </div>
                                        <div class="form-group mt-3 col-md-10">
                                            <label for="theatername">Theater Name</label>
                                            <input style="border-color:#b4e3eb;" type="text"
                                                class="form-control col-md-12 mt-2" value="{{response.theatername}}"
                                                id="theatername" name="theatername" placeholder="Theater Name" required>
                                        </div>
                                        <div class="form-group mt-3 col-md-10">
                                            <label for="phonenumber">Phone Number</label>
                                            <input style="border-color:#b4e3eb;" type="text"
                                                class="form-control col-md-12 mt-2" value="{{response.phonenumber}}"
                                                id="phonenumber" name="phonenumber" placeholder="Phone Number" required>
                                        </div>

                                        <input type="text" class="form-control col-md-12 mt-2" value="{{response._id}}"
                                            id="id" name="id" style="display: none;">
                                        <center>
                                            <a href="/admin/theater-manage"
                                                class="btn btn-danger  mt-3 mr-2 ">Cancel</a>
                                            <button type="submit" class="btn btn-success  mt-3">Submit</button>
                                        </center>
                                    </div>
                                </form>
                            </div>



                        </div>

                    </div>
                </div>
            </div>
        </div>




</body>

</html>