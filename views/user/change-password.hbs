    <!--//breadcrumbs -->
    <!-- contact1 -->
    <section class="w3l-contact-1">
        <div class="contacts-9 py-5">
            <div class="container py-lg-4">
                <div class="headerhny-title text-center">
                    <h4 class="sub-title text-center">Change Password</h4>
                    <p class="text-danger hny-title mb-lg-5 mb-4">Don’t use a password from another site, or something
                        too obvious like your pet’s name.</p>
                </div>
                <div class="p-2 message">
                    {{#if changePasswordSucc}}
                    <div class="alert alert-success" role="alert">
                        {{changePasswordSucc}}
                    </div>
                    {{/if}}
                    {{#if changePasswordError}}
                    <div style="color: red;" class="alert alert-danger" role="alert">
                        {{changePasswordError}}
                    </div>

                    {{/if}}
                </div>
                <div class="contact-view mt-lg-5 mt-4">
                    <div class="conhny-form-section">
                        <form action="/change-password" method="post" class="formhny-sec">
                            <div class="row ">
                                <div class="col-md-12">
                                    <div class="col-md-12 mt-4 form-input">
                                        <input type="password" name="oldPassword" id="oldPassword"
                                            placeholder="Enter your password " required="" />
                                    </div>

                                    <div class=" text-center registrationFormAlert" style="color:red;"
                                        id="ErrorPasswordMatch"></div>
                                    <div class="col-md-12 mt-4 form-input">
                                        <input type="password" name="newpassword" id="newpassword"
                                            placeholder="Enter new Password " required />
                                    </div>
                                    <div class="col-md-12 mt-4 form-input">
                                        <input type="password" name="confirmpassword" id="confirmpassword"
                                            placeholder="Enter Confirm password " required />
                                    </div>
                                    <div class="submithny text-right m-2 mt-4">
                                        <button id="changePasswordSubmit" class="btn read-button">Submit </button>
                                    </div>
                                </div>

                            </div>


                        </form>
                    </div>


                </div>
            </div>
        </div>
        </div>

    </section>
